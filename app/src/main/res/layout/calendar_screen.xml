<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">

    <FrameLayout
        android:id="@+id/calendar_view_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/calendar_add_event_button">

    </FrameLayout>
    <Button
        android:id="@+id/calendar_add_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buzz_gold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/calendar_navigation"
        android:text="@string/calendar_add_event"
        />

    <android.support.design.widget.BottomNavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/buzz_blue"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation"/>
</android.support.constraint.ConstraintLayout>